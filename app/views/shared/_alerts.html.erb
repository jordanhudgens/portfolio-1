<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Milan's Portfolio", sticky: false) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Milan's Portfolio", sticky: false) %>	
<% else %>
	<%= js add_gritter(flash[:notice], title: "Milan's Portfolio", sticky: false) %>		
<% end %>