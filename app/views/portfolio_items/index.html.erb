<h1>Portfolio items</h1>

<%= link_to "new item", new_portfolio_item_path %>

<% @portfolio_items.each do |item| %>

	<p><%= link_to item.title, portfolio_item_show_path(item) %></p>
	<p><%= item.subtitle %></p>
	<p><%= item.body %></p>
	<%= image_tag item.thumb_image unless item.thumb_image.nil? %>
	<%= link_to "edit", edit_portfolio_item_path(item) %>
	<%= link_to "delete", portfolio_item_path(item), method: :delete, data: { confirm: 'are you sure?' } %>

<% end %>
